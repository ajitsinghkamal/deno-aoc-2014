{
	"tasks": {
		"main": "deno run --env --allow-env --allow-read ./main.ts",
		"dev": "deno run --env --allow-env --allow-read --watch problems/**/*.ts",
		"tests": "deno test --allow-env --allow-read --env-file='.env.test'",
		"lint": "deno lint",
		"format": "deno fmt"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/cli": "jsr:@std/cli@^1.0.8",
		"@std/fs": "jsr:@std/fs@^1.0.6"
	},
	"fmt": {
		"useTabs": true,
		"semiColons": true
	}
}
