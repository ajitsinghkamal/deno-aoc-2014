{
	"tasks": {
		"solve": "deno run --env --allow-env --allow-read",
		"dev": "deno run --env --allow-env --allow-read --watch problems/**/*.ts",
		"tests": "deno test --allow-env --allow-read --env-file='.env.test'",
		"lint": "deno lint",
		"format": "deno fmt"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1"
	},
	"fmt": {
		"useTabs": true,
		"semiColons": true
	}
}
